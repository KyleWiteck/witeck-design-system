{
  "extends": [
    "./tsconfig.json"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "declarationDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "target": "ES2020"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
